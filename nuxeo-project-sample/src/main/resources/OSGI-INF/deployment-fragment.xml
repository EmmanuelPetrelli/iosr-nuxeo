<?xml version="1.0"?>
<fragment>

  <extension target="application#MODULE">
    <module>
      <java>${bundle.fileName}</java>
    </module>
  </extension>

  <extension target="faces-config#APPLICATION">
    	<variable-resolver>
        	org.springframework.web.jsf.DelegatingVariableResolver
    	</variable-resolver>
    	<variable-resolver>
        	org.springframework.web.jsf.WebApplicationContextVariableResolver
    	</variable-resolver>
    	<resource-bundle>
			<base-name>org.nuxeo.project.czopson.translation</base-name>
			<var>translation</var>
		</resource-bundle>
  </extension>

  <extension target="faces-config#NAVIGATION">
    <navigation-case>
      <from-outcome>bookwizard</from-outcome>
      <to-view-id>/bookwizard.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </extension>

  <extension target="faces-config#CONVERTER">
    <converter>
      <converter-id>BookIntegerConverter</converter-id>
      <converter-class>
        org.nuxeo.project.sample.BookIntegerConverter
      </converter-class>
    </converter>
  </extension>

  <extension target="faces-config#VALIDATOR">
    <validator>
      <validator-id>BookIntegerValidator</validator-id>
      <validator-class>
        org.nuxeo.project.sample.BookIntegerValidator
      </validator-class>
    </validator>
  </extension>

  <extension target="web#CONTEXT-PARAM">
    <context-param>
      <param-name>org.jboss.seam.core.init.debug</param-name>
      <param-value>true</param-value>
    </context-param>
  </extension>

  <extension target="web#LISTENER">
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
  </extension>
	
  <install>

    <!-- Unzip the war template -->
    <unzip from="${bundle.fileName}" to="/">
      <include>nuxeo.war/**</include>
    </unzip>

    <!-- Append .properties files -->
    <delete path="sampledir.tmp" />
    <mkdir path="sampledir.tmp" />
    <unzip from="${bundle.fileName}" to="sampledir.tmp">
      <include>**/*.properties</include>
    </unzip>
    <append from="sampledir.tmp/OSGI-INF/l10n/messages.properties"
      to="nuxeo.war/WEB-INF/classes/messages.properties"
      addNewLine="true" />
    <append from="sampledir.tmp/OSGI-INF/l10n/messages_fr.properties"
      to="nuxeo.war/WEB-INF/classes/messages_fr.properties"
      addNewLine="true" />
    <append from="sampledir.tmp/OSGI-INF/l10n/translation.properties"
      to="nuxeo.war/WEB-INF/classes/translation.properties"
      addNewLine="true" />
    <append from="sampledir.tmp/OSGI-INF/l10n/translation_pl.properties"
      to="nuxeo.war/WEB-INF/classes/translation_pl.properties"
      addNewLine="true" />
    <delete path="sampledir.tmp" />

  </install>

</fragment>
