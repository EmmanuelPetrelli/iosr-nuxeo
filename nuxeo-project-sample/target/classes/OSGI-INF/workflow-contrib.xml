<?xml version="1.0"?>
<component name="org.nuxeo.project.sample.workflow">

	<extension target="org.nuxeo.ecm.platform.jbpm.core.JbpmService"
		point="securityPolicy">

		<securityPolicy
			class="org.nuxeo.ecm.platform.jbpm.core.service.DefaultJbpmSecurityPolicy"
			for="book" />
	</extension>

	<extension target="org.nuxeo.ecm.platform.jbpm.core.JbpmService"
		point="typeFilter">
		<type name="Book">
			<processDefinition>review_parallel</processDefinition>
			<processDefinition>book</processDefinition>
		</type>
	</extension>

	<extension target="org.nuxeo.ecm.platform.jbpm.core.JbpmService"
		point="processDefinition">
		<processDefinition path="process/book.xml"
			deployer="ifChanged" />
	</extension>

</component>